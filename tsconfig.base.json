{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "ES2022", "es2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "skipDefaultLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": false,
    "jsx": "react",
    "paths": {
      "@mpv-easy/tool": ["./mpv-tool/src"],
      "@mpv-easy/clip-play": ["./mpv-clip-play/src"],
      "@mpv-easy/console": ["./mpv-console/src"],
      "@mpv-easy/hook": ["./mpv-hook/src"],
      "@mpv-easy/autoload": ["./mpv-autoload/src"],
      "@mpv-easy/assdraw": ["./mpv-assdraw/src"],
      "@mpv-easy/mock": ["./mpv-mock/src"],
      "@mpv-easy/ui": ["./mpv-ui/src"],
      "@mpv-easy/i18n": ["./mpv-i18n/src"]
    }
  }
}
